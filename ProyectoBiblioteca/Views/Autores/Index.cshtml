@model IEnumerable<proyecto.Models.Autores>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AutorFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutorNotes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AutorFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutorNotes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AutorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AutorID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AutorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
