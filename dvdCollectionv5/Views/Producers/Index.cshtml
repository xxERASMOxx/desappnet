@model IEnumerable<dvdCollection.Models.Producers>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProducerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactEmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebSite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactEmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebSite)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProducerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProducerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProducerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
